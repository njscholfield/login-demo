<!DOCTYPE html>
<html>
  <head>
    <title>Reset Password</title>
    <% include ../views/partials/header.ejs %>
  </head>
  <body>
    <% include ../views/partials/navbar-public.ejs %>
    <div class="jumbotron">
      <div class="container">
        <h1>Reset Password</h1>
        <p>Enter a new password</p>
      </div>
    </div>
    <div class="container">
      <h4 class="<%= message.type %>"><%= message.content %></h4>
      <form action="/reset/" method="post">
        <legend>Reset Password</legend>
        <fieldset>
            <input type="hidden" value="<%= id %>" name="id">
            <input type="hidden" value="<%= token %>" name="token">
          <div class="form-group <%= error['newPassword'] %>">
            <label for="password1">New Password <button type="button" class="btn btn-xs btn-default" data-container="body" data-toggle="popover" data-placement="top" data-content="Password must be 8-72 characters">ℹ︎</button></label>
            <input type="password" class="form-control" name="newPassword1" placeholder="password" required="true" minlength="8" maxlength="73">
          </div>
          <div class="form-group <%= error['newPassword'] %>">
            <label for="password2">Confirm New Password</label>
            <input type="password" class="form-control" name="newPassword2" placeholder="password" required="true" minlength="8" maxlength="73">
          </div>
        <fieldset>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-default">Clear</button>
          </div>
      </form>
    </div>
    <% include ../views/partials/scripts.ejs %>
  </body>
</html>
