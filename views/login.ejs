<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <% include ../views/partials/header.ejs %>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container">
        <h1>Login</h1>
      </div>
    </div>
    <div class="container">
      <h4 class="text-danger"><%= message %></h4>
      <form action="/login/" method="post">
        <legend>Login</legend>
        <fieldset>
          <div class="form-group <%= error['username'] %>">
            <label for="loginUsername">Username</label>
            <input type="text" class="form-control" placeholder="username" name="loginUsername">
          </div>
          <div class="form-group <%= error['password'] %>">
            <label for="loginPassword">Password</label>
            <input type="password" class="form-control" placeholder="Password" name="loginPassword">
          </div>
        </fieldset>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Submit</button>
          <button type="reset" class="btn btn-default">Clear</button>
        </div>
      </form>
    </div>
  </body>
</html>
